/* pages/home/home.wxss */

.home_img .image {
  width: 520rpx;
  height: 520rpx;
  display: block;
  margin: auto;
}

.home_prorated, .home_surplus {
  font-size: 36rpx;
  color: rgb(0, 0, 0);
  padding: 40rpx 0 0 120rpx;
}

.home_proratedDetail {
  display: flex;
  align-items: center;
}

.home_proratedDetailNum {
  font-size: 40rpx;
  color: rgb(0, 0, 0);
  text-align: center;
  margin-left: 220rpx;
  width: 350rpx;
}

.home_exchange {
  color: green;
  font-size: 28rpx;
}

.home_surplusNum {
  font-size: 80rpx;
  color: rgb(0, 0, 0);
  text-align: center;
}

.home_prop {
  width: 690rpx;
  line-height: 88rpx;
  background: green;
  color: white;
  margin-top: 40rpx;
}

.home_surT {
  margin: 60rpx auto 60rpx;
  display: block;
}

.home_surTcontent {
  display: flex;
  margin-top: 18rpx;
  justify-content: center;
  align-items: center;
}

.h_s {
  display: block;
}

.h_btn {
  font-size: 24rpx;
  color: white;
  text-align: center;
  background-color: green;
  width: 25%;
  margin: 40rpx auto;
}

.h_title {
  margin-top: 36rpx;
  font-size: 36rpx;
  text-align: center;
}

.h_n_content {
  display: block;
  margin: auto;
}

.h_n {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 18rpx;
}

.h_n_c {
  display: block;
}

.h_n_c input, .h_s input {
  margin: auto;
  z-index: 2;
  width: 440rpx;
  height: 78rpx;
  border: 1px solid rgb(102, 102, 102);
  padding-left: 4rpx;
  padding-right: 4rpx;
  box-sizing: border-box;
  outline: none;
  line-height: 74rpx;
  text-align: left;
  font-size: 28rpx;
  font-weight: 400;
  font-style: normal;
  text-decoration: none;
  font-family: 微软雅黑;
  color: rgb(0, 0, 0);
  background-color: rgb(255, 255, 255);
  border-radius: 0px;
}

.h_s_a {
  margin: 0rpx;
  padding: 0rpx 10rpx;
  width: 156rpx;
  line-height: 60rpx;
  transform: scale(1);
  transform-origin: left top;
  text-overflow: clip;
  white-space: normal;
  text-align: center;
  text-decoration: none;
  user-select: text;
  background-color: green;
  border-radius: 6rpx;
  margin-left: 10rpx;
  color: white;
  font-size: 20rpx;
}

.h_n_btn {
  width: 156rpx;
  margin: 0 0 0 10rpx;
  background-color: green;
  border-radius: 6rpx;
  color: white;
  font-size: 24rpx;
  line-height: 80rpx;
  padding: 0;
}

.bs {
  display: flex;
  padding: 0 0 0 120rpx;
}

.b_t, .b_d {
  width: 76rpx;
  height: 76rpx;
  border: none;
}

.b_div {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20rpx 40rpx 0 0;
}

.t_x, .d_h {
  white-space: nowrap;
  text-align: left;
  font-size: 28rpx;
  font-weight: 400;
  font-style: normal;
  text-decoration: none;
  font-family: 微软雅黑;
  color: rgb(0, 0, 0);
}
